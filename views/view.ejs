<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-3">
        <h2 class="text-center">View Data</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">title</th>
                <th scope="col">price</th>
                <th scope="col">description</th>
                <th scope="col">image</th>
                <th scope="col">action</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach((product,index)=>{ %>
                    <tr>
                      <th scope="row"><%= index + 1%></th>
                      <td><%= product.title %></td>
                      <td><%= product.price %></td>
                      <td><%= product.description %></td>
                      <td><img src="<%= product.image %>" alt="img" style="width: 100px; height: 100px;"></td>
                      <td><a href="/edit/<%= product._id %>">edit</a> || <a href="/delete/<%= product._id %>">delete</a></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
          <div class="text-center">
              <a href="/" class="btn btn-primary mt-3">Add Data</a>
          </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>